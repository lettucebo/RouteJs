<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>JavaScript URL routing for ASP.NET Core (vNext) and MVC 6. Allows you to use your ASP.NET MVC routes from JavaScript. Please refer to project site (http://dan.cx/projects/routejs) for more details, usage examples and sample code.</Description>
    <AssemblyTitle>RouteJs (ASP.NET Core MVC)</AssemblyTitle>
    <VersionPrefix>2.2.0</VersionPrefix>
    <Authors>Daniel Lo Nigro</Authors>
    <TargetFrameworks>net451;netstandard1.6</TargetFrameworks>
    <NoWarn>$(NoWarn);CS7035</NoWarn>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>RouteJs.AspNet</AssemblyName>
    <PackageId>RouteJs.AspNet</PackageId>
    <PackageTags>asp.net;mvc;asp;routing;route;url;ajax;jquery;javascript;js;vnext;asp.net 5</PackageTags>
    <PackageReleaseNotes>Please refer to project site (http://dan.cx/projects/routejs) for more details, release notes, usage examples and sample code.</PackageReleaseNotes>
    <PackageProjectUrl>http://dan.cx/projects/routejs</PackageProjectUrl>
    <PackageLicenseUrl>http://dan.cx/projects/routejs#licence</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>git://github.com/Daniel15/RouteJs</RepositoryUrl>
    <PackageTargetFallback Condition=" '$(TargetFramework)' == 'netstandard1.6' ">$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\SharedAssemblyVersionInfo.cs" Exclude="bin\**;obj\**;**\*.xproj;packages\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Html.Abstractions" Version="1.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="1.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Routing" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
